<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="7"
    android:layout_margin="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageButton
                android:id="@+id/favoritos"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/rounded_corner"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/texto_favoritos"
                android:layout_marginLeft="15dp"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/favoritos"
                android:text="Favoritos"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp">

            <ImageButton
                android:id="@+id/listas"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:background="@drawable/rounded_corner"
                app:srcCompat="@drawable/ic_view_list_black" />

            <TextView
                android:id="@+id/texto_listas"
                android:layout_marginLeft="15dp"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/listas"
                android:text="Listas"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/listas_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                app:srcCompat="@drawable/ic_format_list_numbered_black" />
            <TextView
                android:id="@+id/texto_listas_top"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listas_top"
                android:text="Top semanal"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_margin="7dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/recientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                app:srcCompat="@drawable/ic_access_time_black" />
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/texto_recientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recientes"
                android:text="Reproducidas
recientemente"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
