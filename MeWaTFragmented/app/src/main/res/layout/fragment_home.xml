<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="240dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="220dp">

            <ImageButton
                android:id="@+id/favoritos"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/texto_favoritos"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/favoritos"
                android:layout_marginLeft="55dp"
                android:text="Favoritos"
                android:textColor="@color/black"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="220dp">

            <ImageButton
                android:id="@+id/listas"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ic_view_list_black" />

            <TextView
                android:id="@+id/texto_listas"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/listas"
                android:layout_marginLeft="55dp"
                android:text="Listas"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="220dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="220dp">
            <ImageButton
                android:id="@+id/listas_top"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/ic_format_list_numbered_black" />
            <TextView
                android:id="@+id/texto_listas_top"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_below="@+id/listas_top"
                android:layout_marginLeft="30dp"
                android:text="Top semanal"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="200dp"
            android:layout_height="220dp">
            <ImageButton
                android:id="@+id/recientes"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/ic_access_time_black" />
            <TextView
                android:id="@+id/texto_recientes"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_below="@+id/recientes"
                android:layout_marginLeft="30dp"
                android:text="Reproducidas recientemente"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
